@model CLDV_MVC_Birds.Models.Bird

@{
    ViewData["Title"] = "AddBird";
}

<form asp-action="AddBird" method="post" enctype="multipart/form-data">
    <div>
        <label>Name</label>
        <input type="text" name="Bird_Name" required />
    </div>
    <div>
        <label>Description</label>
        <textarea name="Bird_Description"></textarea>
    </div>
    <div>
        <label>Location</label>
        <input type="text" name="Location" required />
    </div>
    <div>
        <label>Image</label>
        <input type="file" name="file" required />
    </div>
    <button type="submit">Add Bird</button>

</form>


